<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book,book.id), method: :delete, class: "text-danger" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, class: "text-primary" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>